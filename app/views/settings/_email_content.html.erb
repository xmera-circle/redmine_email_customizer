<%= tag. p do %>
  <%= tag.label l(:label_email_title) %>
    <%= text_field_tag 'settings[email_title]',  
                        EmailCustomizer[:email_title] %>
<% end %>

<%= tag. p do %>
  <%= tag.label l(:label_email_title_primary_color) %>
    <%= hidden_field_tag 'settings[email_title_primary_color]', '0' %>
    <%= check_box_tag 'settings[email_title_primary_color]',
                        '1',
                        EmailCustomizer.checked?(:email_title_primary_color) %>
<% end %>

<%= tag. p do %>
  <%= tag.label l(:label_form_of_address) %>
    <%= text_field_tag 'settings[form_of_address]',  
                        EmailCustomizer[:form_of_address] %>
<% end %>

<%= tag. p do %>
  <%= tag.label l(:label_complimentary_close) %>
    <%= text_area_tag 'settings[complimentary_close]',  
                        EmailCustomizer[:complimentary_close],
                        class: 'wiki-edit',
                        rows: 5, cols: 5 %>
  <%= wikitoolbar_for('settings_complimentary_close') %>
<% end %>

<%= tag. p do %>
  <%= tag.label l(:label_company_data) %>
    <%= text_area_tag 'settings[company_data]',  
                        EmailCustomizer[:company_data],
                        class: 'wiki-edit',
                        rows: 10, cols: 5 %>
  <%= wikitoolbar_for('settings_company_data') %>
<% end %>

<%= tag. p do %>
  <%= tag.label l(:label_footer_text) %>
    <%= text_area_tag 'settings[footer_text]',  
                        EmailCustomizer[:footer_text],
                        class: 'wiki-edit',
                        rows: 10, cols: 5 %>
  <%= wikitoolbar_for('settings_footer_text') %>
<% end %>